<div class="row">
  <div class="col-md-12">
    <h2>
      Items
      <a href="/items/add" class="btn btn-success float-end">Add Post</a>
    </h2>
    <hr />

    {{#if items.length}}
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
              <th class="text-end"></th> <!-- Remove button column -->
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
                <td>${{this.price}}</td>
                <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                <td>{{this.published}}</td>
                <td class="text-end">
                  <a href="/items/delete/{{this.id}}" class="btn btn-danger btn-sm">Remove</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="alert alert-warning text-center">
        <strong>{{message}}</strong>
      </div>
    {{/if}}
  </div>
</div>
