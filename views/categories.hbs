<div class="row">
  <div class="col-md-12">
    <h2>
      Categories
      <a href="/categories/add" class="btn btn-success float-end">Add Category</a>
    </h2>
    <hr />

    {{#if categories.length}}
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th>Category ID</th>
              <th>Category Name</th>
              <th class="text-end"></th> <!-- Column for Remove button -->
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
              <tr>
                <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                <td class="text-end">
                  <a href="/categories/delete/{{this.id}}" class="btn btn-danger btn-sm">Remove</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="alert alert-warning text-center">
        <strong>{{message}}</strong>
      </div>
    {{/if}}
  </div>
</div>
