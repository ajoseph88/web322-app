<div class="row">
  <section class="main col-md-9">
    {{#if data.post}}
    <item>
      <div class="row">
        <div class="col-12 text-center">
          <h2>{{data.post.title}}</h2>
          {{#if data.post.featureImage}}
          <img
            src="{{data.post.featureImage}}"
            alt="Feature Image"
            style="width: 80%; max-width: 600px; margin: 20px auto; display: block;"
          />
          {{else}}
          <img
            src="/images/product1.png"
            alt="Default Image"
            style="width: 80%; max-width: 600px; margin: 20px auto; display: block;"
          />
          {{/if}}
        </div>

        <div class="col-12">
          <div class="row">
            <div class="col-12">
              <br />
              {{{data.post.body}}}
              <br /><br />
              <strong>Price:</strong> ${{data.post.price}}<br />
              <strong>Category:</strong> {{data.post.category}}<br />
              <strong>Last Updated:</strong> {{data.post.postDate}}
            </div>
          </div>
        </div>
      </div>
    </item>
    {{else}}
    <div class="col-md-12 text-center">
      <h2>{{data.message}}</h2>
      <p>Please try another Post / Category</p>
    </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    {{#if data.posts}}
    <h4>Items</h4>
    <ul class="list-group">
      {{#each data.posts}}
      <a href="/shop/{{this.id}}?category={{../data.viewingCategory}}" class="list-group-item">{{this.title}}</a>
      {{/each}}
    </ul>
    {{/if}}

    {{#if data.categories}}
    <h4>Categories</h4>
    <ul class="list-group">
      {{#each data.categories}}
      <a href="/shop?category={{this.id}}" class="list-group-item">{{this.category}}</a>
      {{/each}}
    </ul>
    {{/if}}
  </aside>
</div>